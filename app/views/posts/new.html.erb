<%= form_with model: @post, local: true do |f| %>

<div class="row">
  <div class="form-group"><br>
      
    <div class="field">
     <%= f.label "部屋の名前" %>
     <%= f.text_field :room_name,  autofocus: true, autocomplete: "name", class: "form-control" %>
    </div><br>
    
    <div class="field">
      <%= f.label "住所1（都道府県）" %>
      <%= f.text_field :prefecture, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div><br>
  
    <div class="field">
     <%= f.label "住所2（市区町村）" %>
     <%= f.text_field :city,  autofocus: true, autocomplete: "introduction", class: "form-control" %>
    </div><br>
    
    <div class="field">
     <%= f.label "料金" %>
     <%= f.text_field :price,  autofocus: true, autocomplete: "introduction", class: "form-control" %>
    </div><br>
    
    
    <div class="field">
     <%= f.label "部屋の紹介" %>
     <%= f.text_field :room_intro,  autofocus: true, autocomplete: "introduction", class: "form-control" %>
    </div><br>
    
    <div class="field">
     <%= f.label "部屋の画像" %><br/>
     <%= f.file_field :caption %>
    </div><br>
    
    <div class="actions">
      <%= f.submit "部屋を登録する" %>
    </div>
   </div>  
 </div>
<% end %>