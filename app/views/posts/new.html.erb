<div class="container">

  <h1 class="text-center">部屋を登録する</h1>

  <%= form_with model: @post, local: true do |f| %>

  <div class="row">
    <div class="col-md-6 col-sm-6 offset-md-3">
        <div class="form-group">
         
          <div class="field">
           <%= f.label "部屋の名前" %>
           <%= f.text_field :room_name,  autofocus: true, class: "form-control" %>
          </div><br>
        
          <div class="field">
           <%= f.label "住所" %>
           <%= f.text_field :city,  autofocus: true, placeholder: address_placeholder, class: "form-control" %>
          </div><br>
          
          <div class="field">
           <%= f.label "料金" %>
           <%= f.number_field :price,  autofocus: true, class: "form-control" %>
          </div><br>
          
          
          <div class="field">
           <%= f.label "部屋の紹介" %>
           <%= f.text_area :room_intro,  autofocus: true, placeholder: text_placeholder, rows: "4", class: "form-control" %>
          </div><br>
          
          <div class="field">
           <%= f.label "部屋の画像" %><br/>
           <%= f.file_field :caption %>
          </div><br>
          
          <div class="actions text-right">
            <%= f.submit "部屋を登録する", class: "btn btn-primary" %>
          </div><br>
          
          <div class="text-right">
            <%= link_to "戻る", :back %>
          </div>
          
         </div>  
    </div>
    <% end %>
  </div>
</div>