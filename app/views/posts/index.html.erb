<% @post.each do |post| %><br>
    <% if post.caption? %>
        <%= image_tag post.caption.url %><br>
    <% else %>
        <%= image_tag 'coomingsoon.jpg', size: '200x200' %>
    <% end %><br>
        <%= post.room_name %><br>
        <%= post.prefecture + post.city %><br>
        <%= post.price %><br>
        <%= post.room_intro %><br>
        <%= time_ago_in_words(post.created_at).upcase + "前" %>
<%= link_to "詳細を見る", post_path(post) %>
<% end %><br>