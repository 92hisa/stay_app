<div class="container">

    <h1 class="text-center">掲載内容を変更する</h1>

    <%= form_with model: @post, local: true do |f| %>
     <div class="row">
        <div class="col-md-6 col-sm-6 offset-md-3">
          
          <div class="form-group">
            
            <div class="field">
              <%= f.label "部屋の画像" %><br/>
              <%= f.file_field :caption  %>
            </div><br>
            
            <div class="field">
             <%= f.label "部屋の名前" %><br/>
             <%= f.text_field :room_name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div><br>
            
            <div class="field">
              <%= f.label "住所" %><br/>
              <%= f.text_field :city, autofocus: true, autocomplete: "adress",placeholder: address_placeholder, class: "form-control" %>
            </div><br>
            
            <div class="field">
              <%= f.label "料金" %><br/>
              <%= f.number_field :price, autofocus: true, autocomplete: "price", class: "form-control" %>
            </div><br>
            
            <div class="field">
              <%= f.label "部屋の紹介" %><br/>
              <%= f.text_area :room_intro, autofocus: true, autocomplete: "adress", placeholder: text_placeholder, rows: "4", class: "form-control" %>
            </div><br>
            
            <div class="actions text-right">
              <%= f.submit "変更する", class: "btn btn-primary" %><br>
            </div><br>
            
            <div class="text-right">
              <%= link_to "掲載削除", post_path(@post.id), method: :delete, class: "btn btn-danger" %><br>
            </div><br>
            
            
            <div class="text-right">
            <%= link_to "戻る", :back %><br>
            </div>
          </div>
        </div>  
     </div>
    <% end %>
</div>