
<div class="container">
  <h1 class="text-center">予約内容確認</h1>
  <div class="row">
    <div class="col-md-12 col-sm-12 offset-md-12">
        <table class="table text-center">
          <thread>
            <tr>
            <th>予約ID</th>
            <th>予約日</th>
            <th>部屋の名前</th>
            <th>チェックイン</th>
            <th>チェックアウト</th>
            <th>宿泊日数</th>
            <th>宿泊人数</th>
            <th>合計金額</th>
            </tr>
            </thread
            <tbody>
            <tr>
                <% @abs = 0 %>
                <% @post.reservations.each do |r| %>
                <td><%= r.id %></td>
                <td><%= r.created_at.to_s(:datetime_jp) %></td>
                <td><%= @post.room_name %></td>
                <td><%= r.checkin %></td>
                <td><%= r.checkout %></td>
                <td><%= @abs = (r.checkout - r.checkin).to_i %><%=  "日間"%></td>
                <td><%= r.people %></td>
                <td><%=  "¥"%><%= @abs * r.people * @post.price.to_i %></td>
            </th>
            </tbody>  
        </table>
        <div class="text-right">
        <% if r.user_id == current_user.id %>
                <td><%= link_to "予約を変更する", edit_post_reservation_path(r, r) %><br>
                <td><%= link_to "予約をキャンセルする", post_reservation_path(r, r), method: :delete %><br>
        <% end %>
        <td><%= link_to "戻る", :back %><br>
        <% end %>
        </div>
    </div>
  </div>
</div>  