<div class="container">

  <h1 class="text-center">予約フォーム</h1>

    <div class="row">
    <div class="col-md-6 col-sm-6 offset-md-3">
        <p class="text-center">１名あたり
        <%= number_to_currency(@post.price, unit: "￥", precision: 0) + "/泊"%>
        </p>
        <div class="form-group">
          <%= form_with(model: [@post, @reservation], local: true) do |f| %><br>
            <div class="field">
              <%= f.label "チェックイン" %><br>
              <%= f.date_field :checkin, class: "form-control", min: Date.current %><br>
            </div><br>
            <div class="field">
              <%= f.label "チェックアウト" %>
              <%= f.date_field :checkout, class: "form-control", min: Date.current %><br>
            </div><br>
            <div class="field">
              <%= f.label "宿泊人数" %>
              <%= f.select :people,[['1名', 1], ['2名', 2], ['3名', 3], ['4名', 4], ['5名', 5], ['6名', 6], ['7名', 7], ['8名', 8], ['9名', 9], ['10名', 10]], { include_blank: true, selected: 1 }, class: "form-control" %>
            </div><br>
            
            <div class="actions text-right">
              <% if user_signed_in? %>
              <%= f.submit "予約する", class: "btn btn-primary" %>
              <% else %>
              <%= link_to "ユーザー登録が必要です", new_user_registration_path, class: "btn btn-primary" %>
              <% end %>
            </div><br>
            <div class="text-right">
              <%= link_to "戻る", :back %>
          <% end %>
        </div>
   </div>
  </div>
</div>
