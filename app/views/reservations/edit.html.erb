<div class="container">

    <h1 class="text-center">予約を変更する</h1>

    <%= form_with(model: [@post, @reservation], local: true) do |f| %>
     <div class="row">
        <div class="col-md-6 col-sm-6 offset-md-3">
          
          <div class="form-group">
            
            <div class="field">
             <%= f.label "チェックイン" %><br/>
             <%= f.date_field :checkin, class: "form-control", min: Date.current %>
            </div><br>
            
            <div class="field">
              <%= f.label "チェックアウト" %><br/>
              <%= f.date_field :checkout, class: "form-control", min: Date.current %>
            </div><br>
            
            <div class="field">
              <%= f.label "宿泊人数" %><br/>
              <%= f.select :people,[['1名', 1], ['2名', 2], ['3名', 3], ['4名', 4], ['5名', 5], ['6名', 6], ['7名', 7], ['8名', 8], ['9名', 9], ['10名', 10]], { include_blank: true, selected: 1 }, class: "form-control" %>
            </div><br>
            
            <div class="actions text-right">
              <%= f.submit "変更する" %><br>
            </div><br>
            
            <div class="text-right">
            <%= link_to "予約確認ページに戻る", reservation_history_path %><br>
            </div>
          </div>
        </div>  
     </div>
    <% end %>
</div>