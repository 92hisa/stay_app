<div class="container">
  <h1 class="text-center">掲載中の部屋一覧</h1>
    <div class="row">
        <div class="col-md-12 col-sm-12 offset-md-12">
            <table class="table text-center">
              <thread>
                <tr>
                <th>部屋の画像</th>
                <th>Post_ID</th>
                <th>掲載日</th>
                <th>部屋の名前</th>
                <th>料金</th>
                <th>部屋の紹介</th>
                <th></th>
                </tr>
                </thread
                <tbody>
                <tr>
                    <% @user.posts.each do |p| %>
                    <% if p.caption? %>
                <td><%= image_tag p.caption.medium.url,size: '150x150' %></td>
                    <% else %>
                <td><%= image_tag 'coomingsoon.jpg', size: '200x150' %></td>
                    <% end %>
                <td><%= p.id %></td>
                <td><%= p.created_at.to_s(:datetime_jp) %></td>
                <td><%= p.room_name %></td>
                <td><%= "¥" + p.price %></td>
                <td><%= p.room_intro %></td>
                <td><%= link_to "内容変更",edit_post_path(p), class: "btn btn-primary" %> </td>
                </tr>
                <% end %>
                </tbody> 
            </table>
        </div>
    </div>
</div>

