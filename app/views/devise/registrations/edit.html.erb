  <div class="container">

    <h1 class="text-center">登録情報の編集</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-6 col-sm-6 offset-md-3">
        <div class="form-group">
            <div class="field">
             <%= f.label "プロフィール画像" %><br>
             <%= f.file_field :profile_photo %><br>
            </div><br>
            <div class="field">
              <%= f.label "ユーザーネーム" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
            </div><br>
            
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :password, "変更後のパスワード" %>
              <%= f.password_field :password, autofocus: "off", class: "form-control" %>
            </div>
        
            <div class="form-group">
              <%= f.label :password_confirmation, "【確認】変更後のパスワード" %>
              <%= f.password_field :password_confirmation, autofocus: "off", class: "form-control" %>
            </div>
            
            <div class="field">
              <%= f.label "プロフィールコメント" %><br />
              <%= f.text_area :intro_text, autofocus: true, rows: "4", placeholder: text_placeholder, class: "form-control" %>
            </div><br>
          
            <div class="actions text-right">
              <%= f.submit "更新する" %>
            </div><br>
          <% end %>  
          <div class="text-right",>
            <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %><br>
            <%= link_to "トップページにもどる", root_path %><br>
          </div>  
        </div>
      </div>  
    </div>   
  </div>