<h2>アカウントを編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="row">
  <div class="form-group">
    <div class="field">
     <%= f.label "アイコン" %><br/>
     <%= f.file_field :profile_photo %>
    </div>
    <div class="field">
      <%= f.label "ユーザーネーム" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
    </div><br>
    
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "変更後のパスワード" %>
      <%= f.password_field :password, autofocus: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "【確認】変更後のパスワード" %>
      <%= f.password_field :password_confirmation, autofocus: "off", class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label "自己紹介" %><br />
      <%= f.text_field :intro_text, autofocus: true, autocomplete: "introducion", class: "form-control" %>
    </div><br>
  
  
    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
  </div>
 </div>  
<% end %>

<%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
<%= link_to "トップページにもどる", root_path %>
